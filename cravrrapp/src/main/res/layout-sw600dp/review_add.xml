<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageHotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
         >
        <View
            android:layout_width="62dp"
            android:layout_height="2dp"
            android:background="@color/hotel_name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LAST ORDER"
        android:textColor="@color/hotel_name"
        android:textSize="20sp" />

    <View
        android:layout_width="63dp"
        android:layout_height="2dp"
        android:background="@color/hotel_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
         >

        <TextView
            android:id="@+id/order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Pickup :"
            android:textColor="@color/hotel_name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 18-Sep-2015"
            android:layout_gravity="center"
            android:textColor="@color/hotel_name"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:fontFamily=""
        android:text="RATE YOUR EXPERIENCE"
        android:textColor="@color/hotel_name"
        android:textSize="20sp" />

    <RatingBar
        android:id="@+id/ratingBaradd_review"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/txtReviewstartup"
        android:layout_width="280dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        
        android:gravity="top|left"
        android:hint="Type your feedback"
        android:lines="6"
        android:maxLength="100"
        android:padding="10dp"
       
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <Button
            android:id="@+id/btnReviewOkstartup"
             android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_submit_button"
                    android:minHeight="0dp"
                    android:padding="5dp"
                    android:visibility="visible" />

        <TextView
            android:id="@+id/textskip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:paddingRight="30dp"
            android:text="SKIP>"
            android:textColor="@color/hotel_name"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>