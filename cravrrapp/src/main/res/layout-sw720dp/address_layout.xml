                            android:paddingLeft="20dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:textColor="@color/address_text_color"
                            android:textColorHint="@color/address_text_color"
                            android:textSize="20sp" />
                    </LinearLayout>

