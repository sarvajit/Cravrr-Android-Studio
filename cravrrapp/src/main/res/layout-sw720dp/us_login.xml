<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bg_header"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textHotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="HotelName"
            android:textColor="@color/hotel_name"
            android:textSize="30sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_login_signin" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <EditText
                android:id="@+id/txtUSMobile"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:background="@color/edittext_background"
                android:ems="10"
                android:hint="ENTER MOBILE"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="10"
                android:nextFocusRight="@+id/txtUSpassword"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/address_text_color"
                android:textColorHint="@color/address_text_color"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txtUSpassword"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:background="@color/edittext_background"
                android:ems="10"
                android:hint="ENTER PASSWORD"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:password="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/address_text_color"
                android:textColorHint="@color/address_text_color"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textForgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="@string/ForgotPass"
                android:textColor="@color/hotel_blue"
                android:textSize="20sp" />
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp" >
        <CheckBox
        android:id="@+id/checkTnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="10dp"
        android:button="@drawable/ingredien_checkbox"
        android:padding="10dp"
        
        android:textColor="@color/address_text_color"
        android:textSize="25sp" />
        
       <TextView
        android:id="@+id/getTnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="@string/textforTnc"
        android:textColor="@color/address_text_color"
        android:textSize="25sp" />
        
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="25dp" >

        <LinearLayout
            android:id="@+id/layoutSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <ImageButton
                android:id="@+id/btnUSBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back_new" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <ImageButton
                android:id="@+id/btnUSGO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_login_new" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>